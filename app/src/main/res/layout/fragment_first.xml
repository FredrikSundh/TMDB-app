<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="Movies"
            type="com.example.tmdbapp.database.Movies" />

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/movie_list_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".FirstFragment">

        <include
            android:id="@+id/movie_1"
            layout="@layout/movielist"
            bind:movie = "@{Movies.movieList[0]}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/movie_2"
            layout="@layout/movielist"
            bind:movie = "@{Movies.movieList[1]}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/movie_3"
            layout="@layout/movielist"
            bind:movie = "@{Movies.movieList[2]}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/movie_4"
            layout="@layout/movielist"
            bind:movie = "@{Movies.movieList[3]}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/movie_5"
            layout="@layout/movielist"
            bind:movie = "@{Movies.movieList[4]}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </ScrollView>
</layout>